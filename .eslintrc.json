{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "quotes": ["warn", "single"],
    "indent": ["warn", 2]
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  }
}
